#!/usr/bin/env bash

# This script parses the Apache log file and displays the visitor IP along with the HTTP status code

# Check if the Apache log file exists
if [ -f "apache-access.log" ]; then
    # Use awk to extract the visitor IP and HTTP status code
    awk '{print $1, $9}' apache-access.log
else
    echo "Apache log file 'apache-access.log' not found."
fi

